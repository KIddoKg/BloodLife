  <script language="javascript">
    function deleteevent(obj, cid) {
        var req = new XMLHttpRequest();
        req.open("GET", "/campaign/delete-event?cid="+cid, true) ;
        req.send();
        
        req.onreadystatechange = function() {
          if(req.readyState == 4 && req.status == 200) {
         
            document.getElementById("requestmanager").innerHTML = req.responseText;
            obj.parentElement.parentElement.parentElement.remove ();

          }

    }
    return false;
}
  </script>
  <script language="javascript">
    function addEvent() {
      var eventname = document.getElementById("eventname");
      var opentime = document.getElementById("opentime");
      var startdate = document.getElementById("startdate");
      var enddate = document.getElementById("enddate");
      var addrevent = document.getElementById("addrevent");
      var pledgenumber = document.getElementById("pledgenumber");

      var req = new XMLHttpRequest();
      req.open("POST", "/campaign/event");
      req.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
      req.send(
        "eventname=" +
        eventname.value +
          "&opentime=" +
          opentime.value +
          "&startdate=" +
          startdate.value +
          "&enddate=" +
          enddate.value +
          "&addrevent=" +
          addrevent.value +
          "&pledgenumber=" +
          pledgenumber.value
      );

      req.onreadystatechange = function () {
        if (req.readyState == 4 && req.status == 200) {
          document.getElementById("requestevent").innerHTML = req.responseText;

          eventname.value = "";
          addrevent.value = "";
          pledgenumber.value = "";
          startdate.value = ""
          enddate.value = ""
          opentime.value = ""
        }
      };

      return false;
    }
  </script>

